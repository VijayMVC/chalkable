@using Chalkable.Common
@using Chalkable.Web.Common
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"  itemscope itemtype="Education">
<head>
    <title>@ViewBag.Title</title>
    @ChlkHelpers.RenderPageMetadata()
    <meta itemprop="image" content="@Url.Content("~/favicon.ico")">
    <link rel="icon" href="@Url.Content("~/favicon.ico")" />

@if (Chalkable.Web.Tools.CompilerHelper.IsProduction)
{
    <link href="@Url.StaticContent("/Content/devdocs-layout.min.css")" rel="stylesheet" media="screen, projection" type="text/css"/>
}
else
{
    <link href="@Url.StaticContent("/app/jquery/snippet/jquery.snippet.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.StaticContent("/app/bower/jquery-ui/themes/smoothness/jquery-ui.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.StaticContent("/app/jquery/validation/css/validationEngine.jquery.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.StaticContent("/app/jquery/validation/css/template_index.css")" rel="stylesheet" type="text/css"/>
}
    <!-- Page specific CSS -->

    @RenderSection("Styles", false)
    @if(!Chalkable.Web.Tools.CompilerHelper.IsDebug)
    {
        ChlkHelpers.GoogleAnalytics();    
    }
    
</head>
<body>
    <div id="fb-root"></div>
    <input type="hidden" value=" ServerTime :  @ViewData["CurrentServerDateTime"]"/>
    <input type="hidden" value=" ServerDbTime:  @ViewData["CurrentServerDBDateTime"]"/>

    <div id="page-header">
        Revision: @Chalkable.Web.Tools.CompilerHelper.Version
    </div>

    @RenderSection("ContentSection", false)  
    @RenderBody()

    <div class="chlk-tooltip" id="chlk-tooltip-item">
        <div class="tooltip-content"></div>
        <div class="tooltip-triangle"></div>
    </div>

@if (Chalkable.Web.Tools.CompilerHelper.IsProduction)
{
    <script type="text/javascript" src="@Url.StaticContent("/app/devdocs-layout.min.js")"></script>
}
else
{
    <script type="text/javascript" src="@Url.StaticContent("/app/bower/jquery/dist/jquery.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/jquery.menu-aim.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/jquery.maskedinput-1.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/bower/jquery-ui/jquery-ui.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/snippet/jquery.snippet.min.js")"></script>

    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/jquery.cycle.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/jquery.fancybox.js")"></script>


    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/validation/languages/jquery.validationEngine-en.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/jquery/validation/jquery.validationEngine.js")"></script>




    <script type="text/javascript" src="@Url.StaticContent("/app/chlk/shared.js")"></script>

    <script type="text/javascript" src="@Url.StaticContent("/app/chlk/index/html5shiv.js")"></script>
    <script type="text/javascript" src="@Url.StaticContent("/app/chlk/index/sign_in_forms.js")"></script>
}


    <!--[if IE 6]><script  type="text/javascript" src="@Url.StaticContent("/app/chlk/index/jq.png-min.js")"></script><![endif]-->
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>

@if (Chalkable.Web.Tools.CompilerHelper.IsProduction)
{
    <script type="text/javascript" src="@Chalkable.Web.Tools.CompilerHelper.ScriptsRoot/scripts/raygun.vanilla.min.js"></script>
    <script type="text/javascript">
        Raygun.init('@Settings.RaygunJsApiKey', { ignore3rdPartyErrors: true })
            .saveIfOffline(true)
            .withTags([location.origin])
            .setVersion('@Chalkable.Web.Tools.CompilerHelper.Version')
            .attach();
    </script>
}

   @if(!Chalkable.Web.Tools.CompilerHelper.IsDebug)
   {
       ChlkHelpers.LinkedIn(ViewData["LinkedInApplicationId"]);
       
       ChlkHelpers.Facebook();
       
   }
   @ChlkHelpers.MixPanel() 
   @ChlkHelpers.Olark() 
   @ChlkHelpers.RenderSiteRoot(Url)
   @ChlkHelpers.WebKitAutofill()
   @RenderSection("BottomScripts", false)
   @RenderSection("MixPanelTracking", false)
   <script type="text/javascript" src='https://platform.twitter.com/anywhere.js?id=@ViewData["TwitterApplicationId"]&v=1' ></script>
</body>
</html>
