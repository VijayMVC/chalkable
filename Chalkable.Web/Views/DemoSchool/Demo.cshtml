    <span class="demo">
        <div class="buttons-container">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    switch (item.Name) 
                        {
                        case "AdminGrade": <a class="Admin" href='LogOn.json?rolename=AdminGrade&prefix=@ViewData["DemoPrefix"]'></a>; break;
