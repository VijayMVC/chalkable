@using System.Configuration
<!doctype html>
<html lang="en" class="no-js">
<head>
	<meta charset="UTF-8">
	<title>Developer</title>
	<meta name="description" content="Web Apps for your school">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/fonts.css" rel="stylesheet" media="screen, projection" type="text/css" />
	<link href="@Url.StaticContent("/Content/index.css")" rel="stylesheet" media="screen, projection" type="text/css" />
