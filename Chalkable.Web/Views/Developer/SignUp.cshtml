@helper RenderDeveloperSignupForm(HtmlHelper Html, UrlHelper Url, String errors)
{
    using (Html.BeginForm("Signup", "Developer", FormMethod.Post, new {id = "developer-signup"}))
    {
        <div id="signup">
            <div class="faq_content" style="position: relative">
                <h3>Get Schools. Get Paid.</h3>
                <div class = "sign-in-errors" style="text-align: center; width: 100%; top: -20px;">
                    
                </div>
                <ul id="form" class="developers">
                    <li>
                        <label>Email </label>
                        <div><input id="Email" name="Email" type="email" spellcheck="false" class="fieldtext validate[required]" value="" maxlength="31" tabindex="2" required/></div>
                    </li>
                    <li>
                        <label class="desc" id="title126" for="Field126">Password </label>
                        <div><input id="Password" name="Password" type="password" class="fieldtext validate[required]" value="" maxlength="31" tabindex="4" onkeyup=" " required/></div>
                    </li>
                    <li>
                        <label class="desc">Password Again</label>
                        <div><input id="ConfirmPassword" name="ConfirmPassword" type="password" class="fieldtext validate[required,equals[Password]]" value="" maxlength="31" tabindex="5" onkeyup=" " required/></div>
                    </li>
                    <li>
                        <p class="instruct terms">
                            By clicking this button you agree to the <a href="@Url.Content("~/Account/Terms")">Terms.</a>
                        </p>
                    </li>
                    <li class="button_container dev">
                        <a href="#" class="signupbutton dev-signup-btn"></a>
                    </li>
                </ul>
            </div>
        </div>
        <input type="submit" style="visibility:hidden;"/>   
    }
}