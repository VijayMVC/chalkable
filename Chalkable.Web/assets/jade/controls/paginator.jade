mixin Paginator(controller, action, data)
    pd = self.preparePaginationData(data)
    .paginator-container
        .left-container
            +ActionLink(controller, action, 0)(class =  'first-page' + (pd.hasPreviousPage ? '' : ' disabled'))
            +ActionLink(controller, action, pd.prevPageStart)(class =  'prev-page' + (pd.hasPreviousPage ? '' : ' disabled'))
            .info-container
                form
                    label(for='current_page') Page
                    input(name='current_page', value=pd.pageIndex).page-value
                    span
                        | of #{data.totalpages}
                    input(type="submit")
                    input(type="hidden",name="controller",value=controller).controller-name
                    input(type="hidden",name="action",value=action).action-name
            +ActionLink(controller, action, pd.nextPageStart)(class =  'next-page' + (pd.hasNextPage ? '' : ' disabled'))
            +ActionLink(controller, action, pd.lastPageStart)(class =  'last-page' + (pd.hasNextPage ? '' : ' disabled'))
        .right-container
            SPAN
                |Displaying #{pd.startText} - #{pd.end} of #{pd.totalCount}
        .clear
