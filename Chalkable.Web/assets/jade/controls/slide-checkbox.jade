mixin SlideCheckbox(name, val, isReadOnly, disabled)
    id = attributes.id
    -attributes.id = null
    -attributes.checked = val
    .slide-checkbox(attributes)
        -attributes.id = id
        -attributes = self.prepareData(attributes, val)
        .wrapper(class=disabled ? 'disabled' : '')
            +Checkbox(name, val, disabled, null, isReadOnly)(attributes)
            if !isReadOnly
                label(for=attributes.id)
            else
                label


