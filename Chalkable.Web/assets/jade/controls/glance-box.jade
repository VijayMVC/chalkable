mixin GlanceBox(controller, action, data, color)
    if controller
        +ActionLink(controller, action).glance-box.hover-action-box
    else
        span(class="glance-box" + (data.items ? " hover-action-box" : ""))
            div
                .value(class=self.getValueClass(data.value) + color ? ' ' + color : '') #{data.value}
                p.glance-title #{data.title}
                if data.items
                    .details
                       -each item, i in data.items
                        div #{self.getShortText(item.getTotal(), item.getSummary())}



