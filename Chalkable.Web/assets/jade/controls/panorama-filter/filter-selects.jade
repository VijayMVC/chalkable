-var currentTest = self.getCurrentTest()

+Select('component')(data-placeholder = 'Component').component-select.filter-select.submit-after-change
    each component  in currentTest.getComponents()
        +Option(component.getId().valueOf(), component.getName())
+Select('scoreType')(data-placeholder = 'Score Type').score-type-select.filter-select.submit-after-change
    each scoreType  in currentTest.getScoreTypes()
        +Option(scoreType.getId().valueOf(), scoreType.getName())

