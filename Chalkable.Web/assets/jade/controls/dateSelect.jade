mixin DateSelect()
    -name=attributes.name
    -attributes = self.processAttrs(attributes);
    .date-select(attributes)
        input(type="hidden", name=name, value=attributes.value ? attributes.value.toString('mm/dd/yy') : null, class="hidden-value")
        +Select('monthCombo')(data-placeholder="Month").month-combo
            each item in self.getMonths()
                +Option(item[0], item[1], item[0]==(attributes.month-1))
        +Select('dayCombo')(data-placeholder="Day").day-combo
            each item in self.getDays()
                +Option(item, item, item==attributes.day)
        +Select('yearCombo')(data-placeholder="Year").year-combo
            each item in self.getYears()
                +Option(item, item, item==attributes.year)



