mixin Checkbox(name, val, isReadOnly, withLabel)
    -attributes.checked = val;
    -attributes.disabled = isReadOnly
    -attributes = self.prepareData(attributes, val)
    +Hidden(name, false)(data-value=val, class="hidden-checkbox", id=attributes.id + '-hidden')
    input(name = name, type="checkbox", class="checkbox")(attributes)
    if withLabel
        label(for = attributes.id)

