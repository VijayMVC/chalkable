.dialog.report-window
   +ActionForm('attendance', 'submitSeatingChartReport').seating-chart-report-form.no-working.report-form
      .x-window-header
         .close.close-btn.dark
         h1=Msg.Create_Report

      .x-window-body
         .action-bar: .items: +ActionLinkList(self.buildReportLinksData('seatingChartReport'))

         +Hidden('gradingPeriodId', self.getGradingPeriodId().valueOf())
         +Hidden('classId', self.getClassId().valueOf())
         .report-content
            TABLE.report-table
               TR
                  TD.item-3
                     h3 Include
                     +LabeledCheckbox('Photograph', 'displayStudentPhoto', true)
                  TD.item-3
                  TD.item-3
      .x-window-footer.report-bottom
         +ReportFormatSelect()
         BUTTON(type="submit").chlk-button.blue-button=Msg.Download
         BUTTON(type="button").close.chlk-button.grey-button=Msg.Cancel