.dialog.report-window
    +ActionForm('feed', 'submitFeedPrintingReport').report-form.no-working
        .x-window-header
            .close.close-btn.dark
            h1=Msg.Print.valueOf().toUpperCase()

        .x-window-body
            +Hidden('announcementType', self.getAnnouncementType() && self.getAnnouncementType().valueOf())
            +Hidden('classId', self.getClassId() && self.getClassId().valueOf())
            +Hidden('complete', self.isComplete())
            .report-content
                TABLE.report-table
                    TR
                        -var minDate = self.getMinStart()
                        -var maxDate = self.getMaxEnd()
                        TD.item-2
                            h3=Msg.From
                            +DatePicker('startdate', self.getStartDate() && self.getStartDate().getDate())(
                                data-options={
                                    showOtherMonths: true,
                                    selectOtherMonths: true,
                                    calendarCls: 'for-dialog',
                                    onClose: function( selectedDate ) {
                                        $( "#end-printing-date" ).datepicker( "option", "minDate", selectedDate );
                                    },
                                    minDate: minDate && minDate.getDate(),
                                    maxDate: maxDate && maxDate.getDate()
                                })#start-printing-date

                        TD.item-2
                            h3=Msg.To
                            +DatePicker('enddate', self.getEndDate() && self.getEndDate().getDate())(
                                data-options={
                                    showOtherMonths: true,
                                    selectOtherMonths: true,
                                    calendarCls: 'for-dialog',
                                    onClose: function( selectedDate ) {
                                        $( "#start-printing-date" ).datepicker( "option", "maxDate", selectedDate );
                                    },
                                    minDate: minDate && minDate.getDate(),
                                    maxDate: maxDate && maxDate.getDate()
                                })#end-printing-date
                    TR
                        TD.item-2
                            .print-item.print-activity-details
                                label(for="include-details") Print activity details
                                input(type = "radio", id="include-details", name = "includedetails", value=true, checked = self.isIncludeDetails())
                        TD.item-2
                            .print-item.print-list-of-activities
                                label(for="include-list") Print list of activities
                                input(type = "radio", id="include-list", name = "includedetails", value=false, checked = !self.isIncludeDetails())
                    TR
                        TD.item-2
                            .check-title Print hidden activities
                            +SlideCheckbox('includehiddenactivities', self.isIncludeHiddenActivities())
                        TD.item-2
                            .check-title Print hidden attributes
                            +SlideCheckbox('includehiddenattributes', self.isIncludeHiddenAttributes())
                    TR
                        TD.item-2
                            .check-title Lesson Plans Only
                            +SlideCheckbox('lessonplanonly', self.isLessonPlanOnly(), !self.isEditableLPOption())(
                                class = self.isEditableLPOption() ? "" : "disabled"
                            )
                        TD.item-2
                            .check-title Print attachments
                            +SlideCheckbox('includeattachments', self.isIncludeAttachments())
        .x-window-footer.report-bottom
            BUTTON(type="submit", name="submitType", value="submit").chlk-button.blue-button=Msg.Download_PDF
            BUTTON(type="button").chlk-button.blue-button=Msg.Print