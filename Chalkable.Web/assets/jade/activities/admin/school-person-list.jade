.school-person-list
    +ActionForm('admins', 'updateList')#people-list-form
        +Button()(type="submit").x-hidden
        .loader-container
            .loader
            .action-bar.not-transparent.buttons.people-top-bar
                .container.panel-bg
                    .left
                        +ActionLink('report', 'peopleExport').export-btn
                    .right
                        .action-button.select-btn
                            +MultipleSelect('All People', 'rolesId')#roles-select
                                each item in self.roles
                                    +LabeledCheckbox(item.getRoleName().capitalize() + 's', item.getRoleId().valueOf().toString(), false)
                        .action-button.select-btn
                            +MultipleSelect('All Grades', 'gradeLevelsIds')(data-suffix-if-one=" Grade")#grade-levels-select
                                each item in self.gradeLevels
                                    +LabeledCheckbox(self.getSerial(parseInt(item.getName(), 10)), item.getId().valueOf().toString(), false)
            +RenderWith(self.getUsersList(), chlk.templates.people.UsersListTpl)(
                userRole = self.getUserRole()
            )