.school-people
    -school=self.getSchoolInfo()
    -users=self.getUsers()
    -roles=self.getRoles()
    -gradeLevels=self.getGradeLevels()
    -window.school = school
    -selectedIndex = self.getSelectedIndex();
    .action-bar.not-transparent.buttons
        .container.panel-bg
            .left
                +ActionLink('schools', 'details', school.getId()) Now
                +ActionLink('schools', 'details', school.getId()) Schedule
                +ActionLink('schools', 'people', school.getId()).pressed People
                +ActionLink('schools', 'details', school.getId()) SIS
    .content.profile-page-margin
        .i-b
            +PhotoContainer('https://dev.chalkable.com/PersonPicture/Read?pictureId=132310&width=256&height=256&gender=m')
        h1.i-b.v-t= school.getName()
        .line
        .center.glance-container
            +GlanceBox(null, null, {value: school.getTeachersCount(), title: 'Teachers'})
            +GlanceBox(null, null, {value: school.getStaffCount(), title: 'Staff'})
            +GlanceBox(null, null, {value: school.getStudentsCount(), title: 'Sudents'})
            +GlanceBox(null, null, {value: school.getInvitesCount(), title: 'Invites'})
        h2 People
        .action-bar.not-transparent.people-tb
            .container.panel-bg
                .right
                    +Select('roleId')#roles-select
                        each item in roles
                            +Option(item.getId(), item.getName())
                    +Select('gradeLevelId')#grade-levels-select
                        each item in roles
                            +Option(item.getId(), item.getName())
        .people-list-container.not-transparent
            .top.panel-bg
                span 127 Students
            .action-bar.buttons.filter
                .container.panel-bg
                    .left
                        +ActionLink('schools', 'people', school.getId()) First name
                        +ActionLink('schools', 'people', school.getId()).pressed Last name
            +ListView(users)(
                selectedIndex = selectedIndex).people-list
                each item, i in users
                    .row(class=(i == selectedIndex ? 'selected' : ''), index=i)
                        +ActionLink('schools', 'details', 1).left
                            img.avatar.avatar47(src="https://dev.chalkable.com/PersonPicture/Read?pictureId=0&width=47&height=47&gender=F")
                        p.left= item.getFullname()
                        .right
                            +Button().message-button.blue-gradient-btn Message
                        .clear


