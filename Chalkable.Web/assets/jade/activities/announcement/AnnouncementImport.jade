.dialog
    .x-window-header
        h1 Import Items
        .close.close-btn

    +ActionForm('announcement', 'import')
        +Hidden('toClassId', self.getClassId())
        +Button(type="submit", name="submitType", value="list").x-hidden.list-update-btn

        .top-container
            .i-b.copy-to-block
                LABEL.text Select year:
                +Select('classId').copy-to-select
                    each item in self.getClassesByYears()
                        -classes = item.getClasses()
                        if classes && classes.length
                            OPTGROUP(label=item.getSchoolYear().getName())
                                each clazz in classes
                                    +Option(clazz.getId().valueOf(), clazz.getFullClassName())
            +DatePicker('copyStartDate')(
                data-options={
                    showOtherMonths: true,
                    selectOtherMonths: true
                }
            ).copy-start-date.right

            .clear-fix
        .table-block.items-table
            .row-block.header-row
                .name-td.check
                    .box-checkbox.circle
                        +Checkbox('allTasks', false, false, true).all-tasks-check
                .name-td.date Date
                .name-td.category Category
                .name-td.name Name
            .items-container

        .buttons-container
            +Button.special-button2.cancel.close.negative-button Cancel
            +Button()(type="submit", disabled="disabled").special-button2.blue-button.import-btn Import

