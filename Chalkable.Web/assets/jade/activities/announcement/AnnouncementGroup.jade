+ActionForm('announcement', self.getId() ? 'editGroupName' : 'createGroup').group-container
    +Hidden('id', self.getId())
    INPUT(type="text", value = self.getName(), class=self.getId() ? '' : 'temporary', name="name").group-name
    if self.getId()
        +ActionLink('announcement', 'tryDeleteGroup', self.getId()).close-btn
