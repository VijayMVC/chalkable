mixin FileIcon_(announcementId, announcementType, assignedAttributeId, attachment)
   .announcement-item.application
      .wrapper
         +LoadingImage(src=attachment.getThumbnailUrl(), id="loading-image-" + attachment.getId().valueOf())
         .title(data-tooltip=attachment.getName(), data-tooltip-type="overflow")= attachment.getName()
         .shortdesc
            .data='Uploaded: ' + attachment.getUploadedDate().format('m/dd/yy')
            .data='Last Sent: ' + attachment.getLastAttachedDate().format('m/dd/yy')
         if !assignedAttributeId
            +ActionButton('announcement', 'attachFromCabinet', announcementId, announcementType, attachment.getId()) Attach
            +ActionButton('announcement', 'cloneAttachment', attachment.getId(), announcementId, announcementType) Duplicate
         else
            +ActionButton('announcement', 'attachFromCabinetToAttribute', announcementId, announcementType, attachment.getId(), assignedAttributeId) Attach
            +ActionButton('announcement', 'cloneAttachmentForAttribute', announcementType, announcementId, attachment.getId(), assignedAttributeId) Duplicate



-var announcementId = self.getAnnouncementId()
-var announcementType = self.getAnnouncementType()
-var assignedAttributeId = self.getAssignedAttributeId()
-var atts = self.getAttachments();
.dialog.attach-dialog
   .x-window-header
      h1 FILE CABINET
      a.close.close-btn
   .x-window-body
      +ActionForm('announcement', 'listAttachments')#file-cabinet-filter
         +Hidden('start', atts.getPageIndex() * atts.getPageSize())
         +Hidden('count', atts.getPageSize())
         +Hidden('announcementid', announcementId.valueOf())
         +Hidden('announcementtype', announcementType.valueOf())
         +Hidden('assignedattributeid', assignedAttributeId && assignedAttributeId.valueOf())

         .buttons.filter
               .left
                  .sort
                     span Sorted by:&nbsp;
                     +Select('sorttype')#file-sort-type
                        -var sortTypeEnum = chlk.models.attachment.SortAttachmentType
                        +Option(sortTypeEnum.RECENTLY_SENT.valueOf(), 'Recently Sent', sortTypeEnum.RECENTLY_SENT == self.getSortType())
                        +Option(sortTypeEnum.NEWEST_UPLOADED.valueOf(), 'Newest Uploaded', sortTypeEnum.NEWEST_UPLOADED == self.getSortType())
                        +Option(sortTypeEnum.OLDEST_UPLOADED.valueOf(), 'Oldest Uploaded', sortTypeEnum.OLDEST_UPLOADED == self.getSortType())
               .right.wrapper
                  .file-search-container
                     input(type="text", placeholder='Filter list...', name="filter", value=self.getFilter()).file-search.search-input
                     .search-glass
                     .file-search-imgs
                        label.file-search-img
                        label.file-search-close.opacity0
               .clear-fix

            .attachments-and-applications
               each att in atts.getItems()
                  +FileIcon_(announcementId, announcementType, assignedAttributeId, att)
   .paging
      +Paginator2('announcement', 'pageAttachments', atts, [announcementId, announcementType, assignedAttributeId, self.getFilter(), self.getSortType()])
