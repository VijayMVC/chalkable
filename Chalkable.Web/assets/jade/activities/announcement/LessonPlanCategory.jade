-var categoryId = self.getId();
-var isNotAbleModify = self.getOwnerId() != null && self.getCurrentUser().getId() != self.getOwnerId();
+ActionForm('lpgallerycategory', self.getId() ? 'editName' : 'create').group-container
    +Hidden('id', categoryId ? categoryId.valueOf() : null)
    if isNotAbleModify
        div(data-value=self.getName(), style="height: 22px;").group-name=self.getName()
    else
        INPUT(type="text",data-value=self.getName(), value = self.getName(), class=categoryId ? '' : 'temporary', name="name", class='validate[required]').group-name
    Button(disabled='disabled', style = self.getId() ? 'display:none;' : '', type="submit").special-button2.blue-button.create-group ok
    if self.getId()
        if self.getLessonPlansCount() > 0 || isNotAbleModify
            +ActionLink('lpgallerycategory', 'tryDelete', categoryId)(
                data-tooltip = isNotAbleModify ? "This category wasn\'t created by You" : "You can\'t delete category with Lesson Plan"
            ).delete-btn.disabled
        else
            +ActionLink('lpgallerycategory', 'tryDelete', categoryId).delete-btn
    else
        .delete-btn
