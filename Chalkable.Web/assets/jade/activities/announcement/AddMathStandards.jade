.dialog.add-standards
    .header
        h1=self.getAnnouncementTypeName() + ' STANDARDS'
        span Choose a standard that describe the item
    +ActionForm('announcement', 'addStandards').add-standards-form
        .standards-list-container
            standards = self.getItemStandards() || []
            table
                tr.standards-row
                    td.name-td
                        .standards-names.column
                            each standard in standards
                                div(data-description=standard.getDescription()).standard-name.column-cell
                                    .name=standard.getName()
                                    .right-triangle
                    td
                        .standards-description
        .buttons-container
            +Button.special-button2.cancel.close Cancel
            +Button()(type="submit").special-button2.blue.add Submit

