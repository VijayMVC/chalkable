each item, i in self.getItems()
    -index = item.getIndex ? (item.getIndex() || i) : i;;
    .row(class=(index == 0 ? 'selected' : ''), index=index)
        +ActionLink('user', 'infoByRole', item.getId(), item.getRole().getName())(
            disabled=self.canViewInfo(item) ? 'undefined' : 'disabled'
        ).left.image-container.white.shadow
            +PersonImg(item, 47)
        p.left= item.getFullName()
        .right
            +ActionLinkButton('message', 'sendToPerson', item.getId(), item.getFirstName(), item.getLastName()).message-button.blue-gradient-btn Message
        .clear


