each item, i in self.getItems()
    index = item.getIndex ? (item.getIndex() || i) : i
    .row(class=(index == 0 ? 'selected' : ''), index=index)
        if self.canViewInfo(item)
            +ProfileLink(item).left.image-container.white.shadow
                +PersonImg(item, 47)
        else
            .left.image-container.white.shadow
                +PersonImg(item, 47)
        p.left= item.getFullName()
        if self.isHasAccess()
            .right
                +ActionLinkButton('message', 'sendToPerson', null, item.getId(), item.getFirstName(), item.getLastName()).message-button.blue-gradient-btn Message
        .clear


