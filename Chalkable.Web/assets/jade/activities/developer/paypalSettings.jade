-var btnTitle = self.email == null ? "Add PayPal" : "Change PayPal"

.payment
    h2.page-title PayPal
    .action-bar
        .items
            +ActionLink('account', 'profile') Profile
            +ActionLink('developer', 'paypalSettings').pressed PayPal

    br
    div.paypal-info.x-hidden
        +ActionForm('developer', 'updatePaymentInfo')
            div
                input(type="text", name="email", value=self.email, class="validate[required, custom[email]]", placeholder="PayPal Email")#payPalEmail
            div
                input(type="text", name="confirmation", value="", class="validate[required, custom[email], equals[payPalEmail]]", placeholder="Confirm PayPal Email")
            div
                +Button()(type="submit").yellow-button.special-button.save-btn Save
                a(href='#').cancel-btn Cancel
    +Button()(type="button").yellow-button.special-button.paypal-btn=btnTitle