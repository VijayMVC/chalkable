mixin RenderAppState(id, state, hasLiveApp)
    .app-status=state.toString(hasLiveApp)
    if state == chlk.models.apps.AppStateEnum.APPROVED
        +ActionLink('apps', 'goLive', id) Live
    if state == chlk.models.apps.AppStateEnum.LIVE
        +ActionLink('apps', 'unlist', id) Unlist
app = self.getApp()

.app-general-info
    .action-bar.not-transparent.dev-app-info
        .container.panel-bg
    .app-header
        .app-icon
            img(src="#", width=100, height=80)
        .app-description
            .title=app.getName()
            +RenderAppState(app.getId(), app.getState(), app.getLiveAppId())



