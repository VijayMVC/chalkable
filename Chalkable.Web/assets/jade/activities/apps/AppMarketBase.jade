mixin AppMarketToolbar(balance, categories, gradelevels, isStore, needsStoreBtn)
    .action-bar.not-transparent.buttons
        .container.panel-bg.buttons-toolbar
            if balance
                .user-balance= "$" + balance
            storeBtnCls = needsStoreBtn ? "pressed-app-store" : "pressed"
            +ActionLink('appmarket', 'list')(class = isStore ? storeBtnCls : "").app-store.toolbar-btn App Store
            +ActionLink('appmarket', 'myApps').my-apps.toolbar-btn My Apps
            //+ActionLink('funds', 'view')(class = isStore ? "" : "pressed").toolbar-btn App Funds
            +ActionForm('', '')
                +SearchBox(chlk.services.AppMarketService, "getAppsByFilter",
                chlk.templates.apps.AppMarketSearchBoxTpl)#app-market-searchbox.market-search-box(name="appMarketSearch", triggerBtnId="app-market-search-btn")
                button(type="submit").search-btn#app-market-search-btn



