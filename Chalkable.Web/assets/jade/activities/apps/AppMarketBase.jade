mixin AppMarketToolbar(balance, categories, gradelevels, isStore, needsStoreBtn, canViewMyApps)
    if balance
        .buttons
            BUTTON.user-balance= "$" + balance

    h2.page-title Apps
    .action-bar
        .items
            +ActionLink('appmarket', 'myApps')(class= !canViewMyApps ? 'disabled' : '').my-apps.toolbar-btn My Apps
            +ActionLink('appmarket', 'list').app-store.toolbar-btn.pressed App Store
    //+ActionForm('', '')
        +SearchBox(chlk.services.AppMarketService, "getAppsByFilter",
        chlk.templates.apps.AppMarketSearchBoxTpl)#app-market-searchbox.market-search-box(name="appMarketSearch", triggerBtnId="app-market-search-btn")
        button(type="submit").search-btn#app-market-search-btn



