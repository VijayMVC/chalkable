if self.getController()
    params = self.getParams();
    //params = (params && params.length ? params.join('/') + '/' : '');
    +ActionLink(self.getController(), self.getAction(), params, self.getId())(class=self.isPressed() ? "pressed " : "").item.class-button.button-link
        .img-wrapper
            img(href="http://local.chalkable.com:8080/chalkable/Course/GetIcon?courseInfoId=10")
        SPAN.text-container= self.getName()
else
    BUTTON(
        classId=self.getId(),
        index=self.getIndex(),
        class=self.isPressed() ? "pressed " : "",
        type=self.isDisabled() ? "button" : "submit",
        name="submitType",
        value="save"
    ).item.class-button.validate-skip
        .img-wrapper
            img(href="http://local.chalkable.com:8080/chalkable/Course/GetIcon?courseInfoId=10")
        SPAN.text-container= self.getName()
