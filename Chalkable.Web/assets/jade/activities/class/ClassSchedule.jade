-var clazz = self.getClazz()
-var param = clazz.getId()
.class-schedule.class-profile.profile-page
    +ProfileTopBar(self, 'schedule')
    .summary-view
        #top-panel
            #avatar-photo-conainer.left-block.panel-block
                .class-image
                    .img-container
                        +ClassImg(clazz, 92, 164)
            #info-panel.central-block.panel-block
                displayName =clazz.getName()
                h1.display-name(data-tooltip=displayName, data-tooltip-type="overflow")=displayName
            #glance-block-panel.right-block.panel-block
        .calendar-section
            +Calendar(self, chlk.templates.calendar.announcement.WeekCalendarBodyTpl, self.getScheduleCalendar(), 'class', {currentAction : 'schedule'}, param ? [param] : [''])
