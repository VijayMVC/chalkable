-var schools = self.getItems()
-var isNotEmptyAttendances = self.isNotEmptyAttendances()
-var isNotEmptyDisciplines = self.isNotEmptyDisciplines()
-var isNotEmptyGrades = self.isNotEmptyGrades()

.chlk-calendar.chlk-grid
    .header
        +ActionLink('district', 'schoolsStatistic', self.getPageIndex() - 1, self.getFilter()).grid-arrow.prev-arrow(class = self.isHasPreviousPage() ? "" : "disabled")
        +ActionLink('district', 'schoolsStatistic', self.getPageIndex() + 1, self.getFilter()).grid-arrow.next-arrow(class = self.isHasNextPage() ? "" : "disabled")
    .grid-content
        if schools.length
            .grid-header.grid-row
                .cell.name=Msg.Schools
                .cell.students=Msg.Students
                if isNotEmptyAttendances
                    .cell.attendance=Msg.Attendance
                if isNotEmptyDisciplines
                    .cell.discipline=Msg.Discipline
                if isNotEmptyGrades
                    .cell.grades=Msg.Grades
            each school in schools
                .grid-row
                    .cell.name
                        .icon
                            .pic
                        +ActionLink('schools', 'classesSummary', school.getId(), school.getName())=school.getName()
                    .cell.students=school.getStudentsCount()
                    if isNotEmptyAttendances
                        .cell.attendance
                            .circle(
                                data-tooltip = school.getStudentsCount() + ' Students, ' + school.getAbsences() + ' Absent',
                                class = school.getAbsencesClass()
                            )=school.getAbsences()
                    if isNotEmptyDisciplines
                        .cell.discipline
                            .circle(
                                data-tooltip=school.getInfractionsCount() + ' Discipline Infractions Today',
                                class = school.getInfractionsClass()
                            )=school.getInfractionsCount()
                    if isNotEmptyGrades
                        .cell.grades
                            .circle(
                                data-tooltip=school.getAvg() + '% Average',
                                class = school.getAvgClass()
                            )=school.getAvg()
        else
            .no-items-text There are no schools
    .footer Page #{self.getTotalPages() ? self.getPageIndex() + 1 : 0} of #{self.getTotalPages()}