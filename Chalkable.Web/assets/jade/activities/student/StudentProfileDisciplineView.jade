mixin MarkingPeriodSelect(markingPeriods, studentId, currentMp)
    +Select('markingPeriodSelect', 'students', 'attendance', studentId.valueOf())
        each mp,i in markingPeriods
            +Option(mp.getId().valueOf(), mp.getName(), mp.getId()== currentMp.getId())


mixin DisciplineSection(data)
    boxesData = data.buildGlanceBoxesData()
    .glance-container
        each boxData in boxesData
            +GlanceBox(null, null, boxData, null, null)


summaryInfo = self.getSummaryInfo()
personId = summaryInfo.getId()
.profile-calendar.student-discipline-view
    .loader-container
        .loader
        .action-bar.not-transparent.buttons
            .container.panel-bg
                //todo move this to some base profile control
                .left
                    +ActionLink('students', 'details', personId) Now
                    +ActionLink('students', 'info', personId) Info
                    +ActionLink('students', 'schedule', personId) Scheduling
                    +ActionLink('students', 'attendance', null, personId) Attendance
                    +ActionLink('students', 'discipline', null, personId).pressed Discipline
                    +ActionLink('students', 'details', personId) Apps
        .profile-info.discipline-view
            .summary-info
                .person-info
                    .avarar-container
                        .img-container
                            +PersonImg(summaryInfo, 64)
                    h1.profile-person-name=summaryInfo.getDisplayName()
                    lable=summaryInfo.getSummary()
                h2.mp-conteiner.profile-drop-down-container
                    +MarkingPeriodSelect(self.getMarkingPeriods(), personId, summaryInfo.getMarkingPeriod())
                .glance-section.discipline-info
                    +DisciplineSection(self)
            #discipline-calendar-info.calendar-section
                +RenderWith(self.getDisciplineCalendar(), chlk.templates.calendar.discipline.StudentDisciplineMonthCalendarTpl)
