-var user = self.getUser()
-var isStudent = self.getUserRole().isStudent()
.profile-page
    h2.page-title= isStudent ? Msg.Student_profile : Msg.Profile
    +ProfileTopBar(self, 'apps')
    #top-panel
        #avatar-photo-conainer.left-block.panel-block
            .img-container
                +PersonImg(user, 140, true)
                .grades-container
        #student-info-panel.right-block.panel-block
            displayName =user.getDisplayName() || user.getFullName()
            h1.display-name(data-tooltip=displayName, data-tooltip-type="overflow")=displayName
            .status=user.getAppsBudget().getInstalledAppsCount() + ' apps installed'
    .sections
        if self.getUserRole().isAdmin()
            +CloseOpen('Budget Balance')
                .sections-info.budget-balance-section
                    .section-data
                        .info-title Balance
                        .data-info=user.getAppsBudget().getBalance()
                    .section-data
                        .info-title School reserve
                        .data-info=user.getAppsBudget().getReserve()
        +CloseOpen('Installed Applications')
            .sections-info.app-veiw-section
                .my-apps
                    .apps
                        each app in user.getAppsBudget().getInstalledApps()
                            -var isBanned = false
                            +ActionLink('apps', 'viewApp', app.getUrl(), app.getMyAppsUrl(), chlk.models.apps.AppModes.MYAPPSVIEW, null, isBanned).application
                                .wrapper
                                    +LoadingImage(src=app.getBannerPictureUrl())
                                    .title=app.getName()
                                    BUTTON Open
