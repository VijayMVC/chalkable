schedule = self.getUser()
.profile-calendar.scheduling-view
    .loader-container
        .loader
        +UserProfileTopBar(self, 'schedule')
        .profile-info.scheduling-view
            .summary-info
                +ShortPersonInfoSection(schedule, 64)
                    label=self.getPersonEnrollmentStatus(self.getUser(), schedule.getClassesNumber())
        actions = {currentAction: 'monthSchedule', day: 'daySchedule', week: 'weekSchedule', month: 'monthSchedule'}
        .calendar-section
            +Calendar(self, chlk.templates.calendar.announcement.MonthCalendarBodyTpl, self.getCalendar(), self.getControllerName(), actions, [schedule.getId()])