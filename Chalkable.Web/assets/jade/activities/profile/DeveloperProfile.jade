.developer
    .info
        h2 Base Info
        +ActionForm('account', 'profileSave')
            -id = self.id ? self.id.valueOf() : null
            input(type="hidden", name="id", value=id)
            div
                label Developer name
                input(name="name", value=self.name)
            div
                label Developer email
                input(name="email", value=self.email)
            div
                label Developer web site
                input(name="website", value=self.webSite)
            div.align-right
                Button Save
        div.bg-line



