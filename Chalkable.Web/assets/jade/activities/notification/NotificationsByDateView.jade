.notifications-by-date-view
    .action-bar.not-transparent.buttons
        .container.panel-bg
            .left
                +ActionLink('feed', 'list').back-btn
    .grid-container.not-transparent
        +Grid('notification', 'listByDays', self.getModel(), null, true)
            +GridBody()
                each item in self.getItems()
                    +GridRow()
                        .notification-day-item
                            h2= self.getItemTitle(item)
                            .day-notifications-container
                                each notification in item.getNotifications()
                                    .notification-item
                                        +ActionLinkWithModel(notification.prepareActionModel()).notification-item-action
                                        div(class=self.convertNotificationTypeToClassName(notification)).small-icon.content!=notification.getMessage()
                                            .time=notification.getCreatedTime()