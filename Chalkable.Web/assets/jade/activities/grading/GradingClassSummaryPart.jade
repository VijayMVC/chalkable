.mps-container
    if self.getItems()
        each item,i in self.getItems()
            gradingPeriod = item.getGradingPeriod()
            div(class=(gradingPeriod.getId() == self.getGradingPeriodId()) ? "open" : "", data-index=i).marking-period-container
                div(data-tooltip=(item.getAvg() != null ? Msg.Avg + " " + item.getAvg() : 'No grades yet')).mp-title=Msg.Grading_Period + ' ' +  gradingPeriod.getName()
                    .collapse
                .mp-data
                    .ann-types-container
                        items = item.getItems()
                        if !items.length
                            .no-items-text=Msg.No_grades_yet
                        else
                            +LeftRightToolbar(items, chlk.templates.grading.GradingClassStandardItemTpl)(
                                needDots = true,
                                roundedDots = true
                            ).big-arrows