.dialog-window.report-window
    .close.close-btn.dark
    date = new chlk.models.common.ChlkDate(getDate())
    h1=Msg.Create_Report
    .report-buttons.panel-bg
        a(href="javascript:").report-button=Msg.Grade_Book_Report
        a(href="javascript:").report-button.pressed=Msg.Worksheet_Report
    TABLE.report-table
        TR
            TD.item-3
                h3=Msg.Start_date
                +DatePicker('startdate', date)(
                    data-options={
                        showOtherMonths: true,
                        selectOtherMonths: true,
                        inCurrentMp: true,
                        calendarCls: 'for-dialog'
                    },
                    class="validate[required]"
                )
            TD.item-3
                h3=Msg.End_date
                +DatePicker('enddate', date)(
                    data-options={
                        showOtherMonths: true,
                        selectOtherMonths: true,
                        inCurrentMp: true,
                        calendarCls: 'for-dialog'
                    },
                    class="validate[required]"
                )
            TD.item-3
                h3=Msg.ID_to_print
                +Select('studentidentifier').id-to-print
                    +Option(1, Msg.Student_Number, true)
                    +Option(2, Msg.State_ID_number, false)
                    +Option(3, Msg.Alt_student_number, false)
                    +Option(4, Msg.SS_number, false)
                    +Option(0, Msg.None, false)
        TR
            TD(colspan="3").item-1
                .grid-container
                    .grid
                        .row.header
                            .cell
                                +Checkbox('allchecks', true).all-checkboxes
                            .cell= Msg.Date
                            .cell= Msg.Category
                            .cell= Msg.Activity
                        .row
                            .cell
                                +Checkbox('check1', true)
                            .cell
                                .text 08/07/2014
                            .cell
                                .text Classwork
                            .cell
                                .text Lecture on national newspaper
                        .row
                            .cell
                                +Checkbox('check2', true)
                            .cell
                                .text 08/07/2014
                            .cell
                                .text Classwork
                            .cell
                                .text Lecture on national newspaper
        TR
            TD(colspan="3").item-1.blank-columns
                h3=Msg.Blank_columns
                +LabeledCheckbox('', 'displaylettergrade', false)(withInput = true, placeholder = Msg.Insert_title)
                +LabeledCheckbox('', 'displaylettergrade', false)(withInput = true, placeholder = Msg.Insert_title)
                +LabeledCheckbox('', 'displaylettergrade', false)(withInput = true, placeholder = Msg.Insert_title)
                +LabeledCheckbox('', 'displaylettergrade', false)(withInput = true, placeholder = Msg.Insert_title)
                +LabeledCheckbox('', 'displaylettergrade', false)(withInput = true, placeholder = Msg.Insert_title)
        TR
            TD.item-3
                h3=Msg.Include
                +LabeledCheckbox(Msg.Score(true), 'displaylettergrade', false)
                +LabeledCheckbox(Msg.Letter_grade, 'displaylettergrade', false)
                +LabeledCheckbox(Msg.Average, 'displaylettergrade', false)
                +LabeledCheckbox(Msg.Student_name, 'displaylettergrade', false)
            TD.item-3
                h3=Msg.Include
                +LabeledCheckbox(Msg.Working_filter, 'displaylettergrade', false)
                +LabeledCheckbox(Msg.Append_to_existing, 'displaylettergrade', false)
                +LabeledCheckbox(Msg.Overwrite_existing, 'displaylettergrade', false)
            TD.item-3
                h3=Msg.Format
                +Select('format').format
                    +Option(0, "PDF", true)
                    +Option(1, "CSV", false)
                    +Option(2, "Excel", false)
                    +Option(3, "HTML", false)
                    +Option(4, "TIFF", false)
                    +Option(5, "XML (" + Msg.With_report_data + ")", false)
    .report-bottom
        BUTTON.chlk-button.blue-gradient-btn=Msg.Download
        BUTTON.chlk-button.grey-button=Msg.Cancel