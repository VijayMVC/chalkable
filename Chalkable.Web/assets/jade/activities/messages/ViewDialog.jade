.dialog.add-message
    .bg-top
    .bg-middle
        .x-window-header
            -var sender = self.getSender() || self.getCurrentUser()
            span= sender.getFirstName() + " " + sender.getLastName()
        .x-window-body
            .general-info
                .subject
                    .text=self.subject
                .body
                    lable.title Message:
                    +TextArea()(readonly).text=self.body
                br
                .form-buttons
                    if !self.isDisabledMessaging()
                        +ActionButton('message', 'sendPage', self.isInbox(), self.id).blue-button.submit-btn= self.isReplay() ? 'Reply' : 'Send'
                    BUTTON.cancel-button.close=Msg.Cancel

    .bg-bottom



