.dialog.add-message
    .bg-top
    .bg-middle
        .x-window-header
            span= self.getSender().getFirstName() + self.getSender().getLastName()
        .x-window-body
            .general-info
                .subject
                    .text=self.subject
                .body
                    lable.title Message:
                    +TextArea()(readonly).text=self.body
                br
                .form-buttons
                    +ActionLinkButton('message', 'sendPage', self.id).special-button.blue-button.submit-btn= self.isReplay() ? 'Reply' : 'Send'
                    +ActionLinkButton('message', 'page').special-button.cancel-button=Msg.Cancel

    .bg-bottom



